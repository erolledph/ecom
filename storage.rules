rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read for all images
    match /{allPaths=**} {
      allow read;
    }

    // User images: Only authenticated users can write to their own folders
    match /users/{userId}/images/{allPaths=**} {
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subscription images: Only authenticated users can write to their own subscription folder
    match /users/{userId}/images/store/subscription/{fileName} {
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Global banners: Public read, admin write
    match /global_banners/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }

    // Sponsored products: Public read, admin write
    match /sponsored_products/{sponsoredProductId}/{fileName} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
  }
}